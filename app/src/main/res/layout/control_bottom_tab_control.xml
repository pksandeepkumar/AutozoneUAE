<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_tab_layout_height"
    android:layout_alignParentBottom="true"
    android:background="#fbb016"
    android:orientation="horizontal"
    android:weightSum="4">


    <TextView
        android:id="@+id/tvTabHome"
        style="@style/tab_text_style"
        android:text="@string/title_home" />


    <TextView
        android:id="@+id/tvAboutUS"
        style="@style/tab_text_style"
        android:text="@string/title_about_us" />


    <TextView
        android:id="@+id/tvTabService"
        style="@style/tab_text_style"
        android:text="@string/title_services" />


    <TextView
        android:id="@+id/tvTabContactUs"
        style="@style/tab_text_style"
        android:text="@string/title_contact_us" />


</LinearLayout>